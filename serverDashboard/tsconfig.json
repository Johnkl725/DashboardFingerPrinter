{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",  // Esta es la carpeta donde se generar√°n los archivos JS compilados
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],  // Incluye todos los archivos .ts en la carpeta src
  "exclude": ["node_modules"]  // Excluye la carpeta node_modules
}
